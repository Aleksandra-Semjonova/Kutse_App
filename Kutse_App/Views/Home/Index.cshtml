@{
    ViewBag.Title = "Tere Tulemast peole!";
}

<main style="background-color: #f6f8fc; padding: 30px;">
 
    <div class="jumbotron" style="background-color: #c6a8d1; color: white; border-radius: 12px; padding: 50px; box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);">
        <h1 style="text-align: center; font-size: 2.8rem;">@ViewBag.Greeting, kallis sõber!</h1>
    </div>


    <div style="text-align: center; margin-top: 30px;">
        <p style="font-size: 1.25rem; color: #5a8a61;">@ViewBag.Message</p>
        <br />
        <img src="~/Images/kutsed.png" alt="Kutse_App" style="max-width: 100%; height: auto; border-radius: 10px; box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);" />
    </div>

  
    <div style="text-align: center; margin-top: 40px;">
        @Html.ActionLink("Vastan", "Ankeet", "Ankeet", new { @class = "btn btn-primary" })
    </div>
</main>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f6f8fc; 
        color: #5a8a61; 
    }

    .jumbotron {
        background-color: #c6a8d1; 
        color: white;
        border-radius: 12px;
        padding: 50px;

        text-align: center;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #7fbf7f; 
        border-color: #7fbf7f;
        padding: 14px 28px;
        font-size: 1.2rem;
        text-transform: uppercase;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #6f9c6f; 
            border-color: #6f9c6f;
        }

    img {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
    }

    p {
        font-size: 1.25rem;
        color: #5a8a61; 
    }
</style>
